@prefix : <#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .

#################################################################
#
#    Object Properties
#
#################################################################

# how can we model status changes as rules? {-something} => {do that}
# we do not have a history. Need to store previous value?

# can i add several domains? -> :hasName for Task, ...
:hasTaskName
    a rdf:Property ;
    rdfs:domain :Task ;
    rdfs:range xsd:String .
    
# define that list is of type InputAttribute?
:hasInputAttributes
    a rdf:Property ;
    rdfs:domain :Task ;
    rdfs:range rdf:List .
    
:hasOutputAttributes
    a rdf:Property ;
    rdfs:domain :Task ;
    rdfs:range rdf:List .
    
:hasPostCondition
    a rdf:Property ;
    rdfs:domain :Task ;
    rdfs:range :PostCondition .


#################################################################
#
#    Classes
#
#################################################################

:Attribute
    a rdfs:Class .

:DataAttribute
    a rdfs:Class ;
    rdfs:subClassOf :Attribute .

:StatusAttribute
    a rdfs:Class ;
    rdfs:subClassOf :Attribute .
    
:Task
    a rdfs:Class .
    
:PostCondition
    a rdfs:Class .
    
