@prefix : <#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix http: <http://www.w3.org/2011/http#>.
@prefix sp: <http://spinrdf.org/sp#> .


# Utility Classes

:Condition
    a rdfs:Class ;
    owl:sameAs sp:Ask . 

:State
    a rdfs:Class .
    
:StageContainer
    a rdfs:Class .

:Instance
    a rdfs:Class .

:Conditional
    a rdfs:Class .

:Instantiable
    a rdfs:Class .

# Workflow Element Classes

:StageModel
    rdfs:subClassOf :StageContainer ;
    rdfs:subClassOf :Instantiable .

:StageInstance
    rdfs:subClassOf :Instance .

:TaskModel
    rdfs:subClassOf :Conditional ;  ##If task hast condition it's a postcondition!
    rdfs:subClassOf :Instantiable .

:TaskInstance
    rdfs:subClassOf :Instance .

:WorkflowModel
    rdfs:subClassOf :StageContainer ;
    rdfs:subClassOf :Instantiable .

:WorkflowInstance
    rdfs:subClassOf :Instance .

:Guard
    rdfs:subClassOf :Conditional .
    
:Milestone
    rdfs:subClassOf :Conditional .

# Properties

:isInstanceOf
    a rdf:Property ;
    rdfs:domain :Instance ;
    rdfs:range :InstantiableObjects .

:containsStage
    a rdf:Property ;
    rdfs:domain :StageContainer ;
    rdfs:range :Stage .

:hasCondition
    a rdf:Property ;
    rdfs:domain :Conditional ;
    rdfs:range sp:Ask .
    
:hasGuard
    a rdf:Property ;
    rdfs:domain :StageModel ;
    rdfs:range :Guard .      
    
:hasMilestone
    a rdf:Property ;
    rdfs:domain :StageModel ;
    rdfs:range :Milestone .

:hasState
    a rdf:Property ;
    rdfs:domain :Instance ;
    rdfs:range :State .

:hasTask
    a rdf:Property ;
    rdfs:domain :StageModel ;
    rdfs:range :TaskModel .

:inInstance
    a rdf:Property ;
    rdfs:domain :Instantiable ;
    rdfs:range :Instantiable .

:inWorkflowInstane                      ###Temporary construct if recursive parent-instance requests are too hard
    a rdf:Property ;
    rdfs:domain :Instantiable ;
    rdfs:range :WorkflowInstance .

:hasHttpRequest
    a rdf:Property ;
    rdfs:domain :TaskModel ;
    rdfs:range http:Request .


# States
:inactive
    a :State .
    # owl:disjointWith :active .

:active
    a :State .
    # owl:disjointWith :inactive .
    
:done
    a :State .
    # owl:disjointWith :inactive .