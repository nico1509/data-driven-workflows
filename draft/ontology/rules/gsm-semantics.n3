    ?stageModel gsm:hasMilestoneModel ?milestoneModel .
    ?milestoneModel gsm:hasValidatingSentry ?sentry .
    ?milestoneInstance gsm:isInstanceOf ?milestoneModel .

    # Prerequisite
    ?stageInstance gsm:isInstanceOf ?stageModel ;
