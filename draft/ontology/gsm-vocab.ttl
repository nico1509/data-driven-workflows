@prefix : <#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix http: <http://www.w3.org/2011/http#>.
@prefix sp: <http://spinrdf.org/sp#> .


# Utility Classes
:Condition
    a rdfs:Class ;
    owl:sameAs sp:Ask . 

:State
    a rdfs:Class .
    
:Instance
    a rdfs:Class .

:Conditional
    a rdfs:Class .

:Instantiable
    a rdfs:Class .

# Workflow Element Classes
:StageModel
    rdfs:subClassOf :Instantiable .

:StageInstance
    rdfs:subClassOf :Instance .

:Task
    rdfs:subClassOf :Conditional ;  ##If task hast condition it's a postcondition!
    rdfs:subClassOf :Instantiable .

:TaskInstance
    rdfs:subClassOf :Instance .

:WorkflowModel
    rdfs:subClassOf :Instantiable .

:WorkflowInstance
    rdfs:subClassOf :Instance .

:Guard
    rdfs:subClassOf :Conditional .
    
:MilestoneModel
    rdfs:subClassOf :Instantiable .

:MileStoneInstance
    rdfs:subClassOf :Instance .

# Properties
:isInstanceOf
    a rdf:Property ;
    rdfs:domain :Instance ;
    rdfs:range :Instantiable .

:containsStageModel
    a rdf:Property ;
    rdfs:domain :WorkflowModel ;
    rdfs:range :StageModel .

:hasCondition
    a rdf:Property ;
    rdfs:domain :Conditional ;
    rdfs:range sp:Ask .
    
:hasInvalidatingSentry
    rdfs:subPropertyOf :hasCondition ;
    rdfs:domain :MilestoneModel .

:hasValidatingSentry
    rdfs:subPropertyOf :hasCondition ;
    rdfs:domain :MilestoneModel .

:hasGuard
    a rdf:Property ;
    rdfs:domain :StageModel ;
    rdfs:range :Guard .      
    
:hasMilestoneModel
    a rdf:Property ;
    rdfs:domain :StageModel ;
    rdfs:range :MilestoneModel .

:hasState
    a rdf:Property ;
    rdfs:domain :Instance ;
    rdfs:range :State .

:hasTask
    a rdf:Property ;
    rdfs:domain :StageModel ;
    rdfs:range :Task .

:inInstance
    a rdf:Property ;
    rdfs:domain :Instantiable ;
    rdfs:range :Instantiable .

:inWorkflowInstance                      ###Temporary construct if recursive parent-instance requests are too hard
    a rdf:Property ;
    rdfs:domain :Instantiable ;
    rdfs:range :WorkflowInstance .

:hasHttpRequest
    a rdf:Property ;
    rdfs:domain :Task ;
    rdfs:range http:Request .

# States
:uninitialized
    a :State .

:initialized
    a :State .

:triggered
    a :State .

:running
    a :State .

:done 
    a :State .

:inactive
    a :State .
    
:active
    a :State .

:achieved
    a :State .

:unachieved
    a :State .
